<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_juego"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp"
    card_view:contentPaddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/juego_foto"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/titulo"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="Imagen del juego"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txtEstudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/juego_foto"
            android:gravity="center_vertical"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtPlataforma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/txtEstudio"
            android:layout_below="@id/txtEstudio"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtAnoPublicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@id/txtEstudio"
            android:layout_below="@id/txtPlataforma"
            android:layout_marginTop="5dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/txtEstudio"
            android:layout_below="@id/txtAnoPublicacion"
            android:layout_marginTop="5dp"
            android:textSize="10sp" />

    </RelativeLayout>



</android.support.v7.widget.CardView>