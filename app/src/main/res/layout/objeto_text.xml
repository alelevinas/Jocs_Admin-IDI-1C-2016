<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect"
    android:divider="@color/cardview_shadow_end_color"
    android:dividerPadding="@dimen/abc_list_item_padding_horizontal_material"
    android:orientation="horizontal"
    android:showDividers="beginning|end">

    <TextView
        android:id="@+id/objeto_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dim_foreground_disabled_material_dark"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/objeto_nivel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/objeto_nombre"
        android:background="@color/dim_foreground_disabled_material_dark"
        android:gravity="center_vertical|right"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</LinearLayout>