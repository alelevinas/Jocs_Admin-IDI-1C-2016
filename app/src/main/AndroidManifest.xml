<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alejandro.jocs_admin_posta">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_juego"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".JuegoInfoActivity"
            android:label="@string/title_activity_juego_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JuegoEditarActivity"
            android:label="@string/title_activity_juego_editar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JuegoAgregarActivity"
            android:label="@string/title_activity_juego_agregar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonajeEditarActivity"
            android:label="@string/title_activity_personaje_editar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonajeAgregarActivity"
            android:label="@string/title_activity_personaje_agregar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ObjetoEditarActivity"
            android:label="@string/title_activity_objeto_editar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ObjetoAgregarActivity"
            android:label="@string/title_activity_objeto_agregar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MisionListActivity"
            android:label="@string/title_mision_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".MisionInfoActivity"
            android:label="@string/title_mision_detail"
            android:parentActivityName=".MisionListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alejandro.jocs_admin_posta.MisionListActivity" />
        </activity>
    </application>

</manifest>